  @model User
  
  <h5>Like what you see? Create an account!</h5>
  <form class="shadow p-3 rounded" asp-controller="User" asp-action="Register" method="POST">

    <div class="mb-3">
      <label asp-for="FirstName"></label>
      <span asp-validation-for="FirstName" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="FirstName" style="font-family: Arial">
    </div>
    <div class="mb-3">
      <label asp-for="LastName"></label>
      <span asp-validation-for="LastName" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="LastName" style="font-family: Arial">
    </div>
    <div class="mb-3">
      <label asp-for="Email"></label>
      <span asp-validation-for="Email" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Email" style="font-family: Arial" >
    </div>
    <div class="mb-3">
      <label asp-for="Username"></label>
      <span asp-validation-for="Username" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Username" style="font-family: Arial">
    </div>
    <div class="mb-3">
      <label asp-for="Password"></label>
      <span asp-validation-for="Password" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Password">
    </div>
    <div class="mb-3">
      <label asp-for="ConfirmPassword"></label>
      <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="ConfirmPassword">
    </div>
    <button class="btn my-btn-class" style="font-family: Arial">Register</button>
  </form>